{
  "dashboard": {
    "title": "Volnix Network Metrics",
    "tags": ["volnix", "blockchain", "cosmos"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "Block Height",
        "type": "graph",
        "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "volnix_block_height",
            "legendFormat": "Block Height",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Height"},
          {"format": "short"}
        ]
      },
      {
        "id": 2,
        "title": "Transaction Rate",
        "type": "graph",
        "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(volnix_tx_total[5m])",
            "legendFormat": "Tx/s",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Transactions/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 3,
        "title": "Connected Peers",
        "type": "graph",
        "gridPos": {"x": 0, "y": 8, "w": 8, "h": 8},
        "targets": [
          {
            "expr": "volnix_peer_count",
            "legendFormat": "Total Peers",
            "refId": "A"
          },
          {
            "expr": "volnix_peer_inbound_count",
            "legendFormat": "Inbound",
            "refId": "B"
          },
          {
            "expr": "volnix_peer_outbound_count",
            "legendFormat": "Outbound",
            "refId": "C"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Peers"},
          {"format": "short"}
        ]
      },
      {
        "id": 4,
        "title": "Block Time",
        "type": "graph",
        "gridPos": {"x": 8, "y": 8, "w": 8, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, volnix_block_time_seconds_bucket)",
            "legendFormat": "95th percentile",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, volnix_block_time_seconds_bucket)",
            "legendFormat": "50th percentile",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Time"},
          {"format": "short"}
        ]
      },
      {
        "id": 5,
        "title": "Transaction Success Rate",
        "type": "graph",
        "gridPos": {"x": 16, "y": 8, "w": 8, "h": 8},
        "targets": [
          {
            "expr": "rate(volnix_tx_success_total[5m]) / rate(volnix_tx_total[5m]) * 100",
            "legendFormat": "Success Rate %",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "Success Rate", "max": 100, "min": 0},
          {"format": "short"}
        ]
      },
      {
        "id": 6,
        "title": "Node Health",
        "type": "stat",
        "gridPos": {"x": 0, "y": 16, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "volnix_node_healthy",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "none",
          "justifyMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          }
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"type": "value", "options": {"0": {"text": "Unhealthy", "color": "red"}, "1": {"text": "Healthy", "color": "green"}}}
            ]
          }
        }
      },
      {
        "id": 7,
        "title": "Sync Status",
        "type": "stat",
        "gridPos": {"x": 6, "y": 16, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "volnix_sync_status",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "none",
          "justifyMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          }
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"type": "value", "options": {"0": {"text": "Syncing", "color": "yellow"}, "1": {"text": "Synced", "color": "green"}}}
            ]
          }
        }
      },
      {
        "id": 8,
        "title": "Validators",
        "type": "stat",
        "gridPos": {"x": 12, "y": 16, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "volnix_validator_count",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "none",
          "justifyMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          }
        }
      },
      {
        "id": 9,
        "title": "Total Errors",
        "type": "stat",
        "gridPos": {"x": 18, "y": 16, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "volnix_errors_total",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "none",
          "justifyMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          }
        },
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 10},
                {"color": "red", "value": 100}
              ]
            }
          }
        }
      },
      {
        "id": 10,
        "title": "Gas Usage",
        "type": "graph",
        "gridPos": {"x": 0, "y": 20, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(volnix_gas_used_total[5m])",
            "legendFormat": "Gas Used/sec",
            "refId": "A"
          },
          {
            "expr": "rate(volnix_gas_limit_total[5m])",
            "legendFormat": "Gas Limit/sec",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Gas"},
          {"format": "short"}
        ]
      },
      {
        "id": 11,
        "title": "Transaction Latency",
        "type": "graph",
        "gridPos": {"x": 12, "y": 20, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, volnix_tx_latency_seconds_bucket)",
            "legendFormat": "95th percentile",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, volnix_tx_latency_seconds_bucket)",
            "legendFormat": "50th percentile",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Latency"},
          {"format": "short"}
        ]
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {},
    "templating": {
      "list": []
    },
    "annotations": {
      "list": []
    },
    "links": []
  }
}



